[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2

[*.{css,sass,scss,less,js,ts}]
insert_final_newline = true
trim_trailing_whitespace = true

[*.{php,html}]
indent_size = 4
trim_trailing_whitespace = false

[*.md]
trim_trailing_whitespace = false
insert_final_newline = true
